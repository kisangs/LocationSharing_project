<!-- res/drawable/custom_combined_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 그라데이션 배경 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00FFFFFF"
            android:endColor="#00FFFFFF"
            android:angle="90"/> <!--  -->
            <corners android:radius="10dp" /> <!-- 테두리의 둥근 모양 활성화 -->
        </shape>
    </item>

    <!-- 테두리 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- 배경은 투명하게 -->
            <stroke
                android:width="2dp"
                android:color="#9FAFA399" /> <!-- 테두리 설정 -->
            <corners android:radius="10dp" /> <!-- 테두리의 둥근 모양 활성화 -->
        </shape>
    </item>

</layer-list>
