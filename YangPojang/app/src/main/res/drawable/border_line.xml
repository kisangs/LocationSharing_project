<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF" /> <!-- 배경 색상, 여기서는 흰색으로 설정 -->
    <stroke
        android:width="0dp"
        android:color="#000000" /> <!-- 테두리 색상 설정, 여기서는 검정색으로 설정 -->
    <stroke
        android:width="1dp"
        android:color="#000000" /> <!-- 밑에 선만 설정 -->
    <corners android:radius="2dp" /> <!-- 테두리 모서리 둥글기 설정 -->
</shape>