<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_rounded_coner_white"
    android:backgroundTint="#F44336">

    <ImageButton
        android:id="@+id/showChangeUserImg"
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:background="@drawable/border_rounded_coner_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118"
        app:srcCompat="@drawable/ment_change_profile_img" />

    <Button
        android:id="@+id/cancleChangeImg"
        android:layout_width="76dp"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#DF793E"
        android:text="취소"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="@+id/showChangeUserImg"
        app:layout_constraintTop_toBottomOf="@+id/showChangeUserImg"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/applyChangeImg"
        android:layout_width="75dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#DF793E"
        android:text="적용"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/showChangeUserImg"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toEndOf="@+id/cancleChangeImg"
        app:layout_constraintTop_toBottomOf="@+id/showChangeUserImg"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>

