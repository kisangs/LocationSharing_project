<?xml version="1.0" encoding="utf-8"?>
<!-- id 형식: view약자_속한xml명_view설명 -->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/myFixShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:letterSpacing="0.1"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxWidth="310sp"
                android:singleLine="true"
                android:text="양양포차"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/myFixVerified"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/pochainfo_verified"
                android:visibility="gone" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/pochainfo_linearline_bottom" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">
            <TextView
                android:id="@+id/myFixMyRatingIs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="별점"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/myFixMyRating"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <RatingBar
                android:id="@+id/myFixMyRating"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="false"
                android:numStars="5"
                android:rating="0"
                android:stepSize="0.5"
                app:layout_constraintBottom_toTopOf="@id/myFixSummaryIs"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/myFixMyRatingIs"
                tools:ignore="SpeakableTextPresentCheck"
                android:progressTint="#FFC107" />
            <TextView
                android:id="@+id/myFixSummaryIs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="내용"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/myFixSummaryOutfit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/myFixMyRating" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/myFixSummaryOutfit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="(150자 이내)"
                app:counterEnabled="true"
                app:counterMaxLength="150"
                app:endIconMode="none"
                app:layout_constraintBottom_toTopOf="@id/myFixUpLoadPicIs"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/myFixSummaryIs">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/myFixSummaryEdit"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="top"
                    android:maxLength="150"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/myFixUpLoadPicIs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="사진 등록"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/myFixUpLoadPicContain"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/myFixSummaryOutfit" />
            <LinearLayout
                android:id="@+id/myFixUpLoadPicContain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/myFixExecuteContainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/myFixUpLoadPicIs">
                <FrameLayout
                    android:id="@+id/myFixPicScope1"
                    android:layout_width="97dp"
                    android:layout_height="97dp"
                    android:layout_marginRight="10dp">
                    <ImageButton
                        android:id="@+id/myFixPicImgBtn1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="left|bottom"
                        android:adjustViewBounds="true"
                        android:background="#CFCFCF"
                        android:src="@drawable/pochareview_camera"
                        android:scaleType="centerCrop"
                        android:padding="0dp"
                        tools:ignore="SpeakableTextPresentCheck" />
                    <ImageButton
                        android:id="@+id/myFixPicCancelBtn1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="right"
                        android:adjustViewBounds="true"
                        android:background="@drawable/reviewwrite_picture_clear_btn"
                        android:src="@drawable/reviewwrite_picture_clear"
                        android:visibility="gone"
                        tools:ignore="SpeakableTextPresentCheck" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/myFixPicScope2"
                    android:layout_width="97dp"
                    android:layout_height="97dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone">
                    <ImageButton
                        android:id="@+id/myFixPicImgBtn2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="left|bottom"
                        android:adjustViewBounds="true"
                        android:background="#CFCFCF"
                        android:src="@drawable/pochareview_camera"
                        android:scaleType="centerCrop"
                        android:padding="0dp"
                        tools:ignore="SpeakableTextPresentCheck" />
                    <ImageButton
                        android:id="@+id/myFixPicCancelBtn2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="right"
                        android:adjustViewBounds="true"
                        android:background="@drawable/reviewwrite_picture_clear_btn"
                        android:src="@drawable/reviewwrite_picture_clear"
                        android:visibility="gone"
                        tools:ignore="SpeakableTextPresentCheck" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/myFixPicScope3"
                    android:layout_width="97dp"
                    android:layout_height="97dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone">
                    <ImageButton
                        android:id="@+id/myFixPicImgBtn3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="left|bottom"
                        android:adjustViewBounds="true"
                        android:background="#CFCFCF"
                        android:src="@drawable/pochareview_camera"
                        android:scaleType="centerCrop"
                        android:padding="0dp"
                        tools:ignore="SpeakableTextPresentCheck" />
                    <ImageButton
                        android:id="@+id/myFixPicCancelBtn3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="right"
                        android:adjustViewBounds="true"
                        android:background="@drawable/reviewwrite_picture_clear_btn"
                        android:src="@drawable/reviewwrite_picture_clear"
                        android:visibility="gone"
                        tools:ignore="SpeakableTextPresentCheck" />
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/myFixExecuteContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/myFixUpLoadPicContain">
                <Button
                    android:id="@+id/myFixCancleBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:backgroundTint="#FF9800"
                    android:letterSpacing="0.2"
                    android:text="취소"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
                <Button
                    android:id="@+id/myFixApplyBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FF9800"
                    android:letterSpacing="0.2"
                    android:text="수정"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>